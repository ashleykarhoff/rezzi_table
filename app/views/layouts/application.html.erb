<!DOCTYPE html>
<html>
  <head>
    <title>RezziTable</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="#">Rezzi Table</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <% if logged_in? %>
              <%= link_to "Reservations", user_path(session[:user_id]), :class => "nav-link"%>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to "Restaurants", restaurants_path, :class => "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Reviews", reviews_path, :class => "nav-link" %>
          </li>
        </ul>
        <form class="form-inline my-2 my-lg-0">
              <% if logged_in? %>
                <%= link_to "Logout", logout_path, :class => "btn btn-outline-success my-2 my-sm-0" %>
              <% else %>
                <%= link_to "Login", login_path, :class => "btn btn-outline-success my-2 my-sm-0" %>
              <% end %>
        </form>
      </div>
    </nav>


    <%= yield %>
  </body>
</html>
