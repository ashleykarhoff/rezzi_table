<div class="background-image"> <%= image_tag "12.jpg", :class => "img-fluid" %> </div>
<p><% if flash[:errors] %></p>
<% flash[:errors].each do |msg| %>
<p><%= msg %></p>
<% end %>
<% end %>

<div class= "new_review_container">
        <div class="form-group">
            <h1>Edit Your Review </h1>
        <%= form_with model: @review do |f| %>
            <%= f.select :food_rating, options_for_select(1..5), {prompt: "Food Rating"} %><br>
            <%= f.select :decor_rating, options_for_select(1..5), {prompt: "Decor Rating"} %><br>
            <%= f.select :service_rating, options_for_select(1..5), {prompt: "Service Rating"} %><br>
            <%= f.text_area :description, placeholder: "description" %><br><br>
            <%= @review.restaurant_name%><br><br>
            <%= f.submit class: "btn btn-primary btn-block" %>
        <% end %>
    </div>
    
</div>
