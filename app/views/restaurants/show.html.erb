<div class="background-image"> <%= image_tag "9.jpg", :class => "img-fluid" %> </div>

<div class="restaurant-description-container">
    <div class="card">
        <div class="card-body description-card">
            <h1 class="restaurant-name" ><%= @restaurant.name %></h1>

            <span>üìç<%= @restaurant.neighborhood %></span>
            <span>üç¥<%= @restaurant.cuisine %></span>
            <span>üí∏<%= @restaurant.price_range %></span>

            <p><%= @restaurant.description %></p>
            <p><%= @restaurant.address %></p>

        </div>
    </div>
    <div class="card" style="background:none;"><div class="card-spacing"></div></div>
    <div class="card">
        <div id="short-card-body" class="card-body reservation-card">
            <h3>Make a reservation</h3>
            <%= form_with model: @reservation do |f| %>
                <div class="form-group">
                    <%= f.label "Party Size" %>
                    <%# <%= f.number_field :party_size %>
                    <%= f.select :party_size, options_for_select(2..10) %>

                </div>

                <div class="form-group">
                    <%= f.label "Reservation Date" %>
                    <%= f.date_field :reservation_date %><br>
                </div>

                <div class="form-group">
                    <%= f.label "Reservation Time" %>
                    <%# <%= f.time_field :reservation_time %>
                    <%= f.select :reservation_time, options_for_select(@times.reverse) %>
                </div>
                
                <%= f.hidden_field :restaurant_id, value: @restaurant.id %>
                <%= f.hidden_field :user_id, value: session[:user_id] %>
                
                <%= f.submit "Submit"%>
            <% end %>
        </div>
    </div>
</div>


