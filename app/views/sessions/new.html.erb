<h1>Welcome to RessiTable</h1>

<%= form_tag login_path do %>
<%= label_tag "Username" %>
<%= text_field_tag :username %> <br>
<%= label_tag "Password" %>
<%= password_field_tag :password %> <br>
<%= submit_tag "Log in" %>
<% end %>

<h3>New to Resssi Table? </h3>
<%= button_to "Sign Up", signup_path %>

<% if flash[:error] %>
<%= flash[:error]%>
<% end %>

 
